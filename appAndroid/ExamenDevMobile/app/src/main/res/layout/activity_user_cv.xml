<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserCv">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avatar"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/scode_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="" />
    <View
        android:layout_below="@+id/scode_profile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/underline"/>
    <RelativeLayout
        android:id="@+id/relativeUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_below="@+id/scode_profile"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/nomProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sofiane ISSOUFOU ISSAKA"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/nameSpecialite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Scientist"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeUsername"
        android:paddingVertical="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:fontFamily="@font/poppins"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/userAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="16sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_below="@+id/relativeAge"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/underline"/>

    <RelativeLayout
        android:id="@+id/relativeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_below="@id/relativeAge"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sofianeissouf@gmail.com"
                android:textSize="16sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeEmail"
        android:paddingVertical="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Téléphone"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+221778249072"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativePhone"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/userAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fass-Dakar"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeStudyLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeAddress"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niveau d'étude"
                android:fontFamily="@font/poppins"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/userStudyLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeExperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeStudyLevel"
        android:paddingVertical="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expériences professionnelles"
                android:fontFamily="@font/poppins"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/userExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 ans"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>